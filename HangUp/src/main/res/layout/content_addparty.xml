<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Request1"/>

        <EditText
            android:id="@+id/place"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Request2"/>

        <TextView
            android:id="@+id/date"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:hint="Request3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/timeI"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:hint="Request4"/>

            <Space
                android:layout_width="100dp"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/TimeF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Request5"/>
        </LinearLayout>

        <EditText
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Request6"
            android:inputType="textMultiLine"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Space
            android:layout_width="70dp"
            android:layout_height="match_parent"/>

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="261dp"
            android:layout_height="169dp">



                <RadioButton
                    android:id="@+id/r0"
                    android:layout_width="141dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/astro"
                    android:text="astro"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    tools:text="@string/HangApp_screen_title"/>

                <RadioButton
                    android:id="@+id/r1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ulpgc"
                    android:text="academic"/>


            <RadioButton
                    android:id="@+id/r3"
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/disco"
                    android:text="party"
                    android:layout_weight="0.37"/>

                <RadioButton
                    android:id="@+id/r2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.17"
                    android:background="@drawable/cars"
                    android:text="motor racing"/>


        </RadioGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="64dp"/>

        <Button
            android:id="@+id/Add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:text="publish"/>

    </LinearLayout>


</LinearLayout>

